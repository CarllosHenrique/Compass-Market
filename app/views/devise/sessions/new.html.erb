<div class="body-devise-style">
  <div class="container">
    <h2 style="color: #fff;">Entrar com sua conta</h2>

   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <label for="exampleInputEmail" class="Lebalinho">Seu Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", placeholder:"Enter email" %>
        <small id="emailHelp" class="form-text text-muted">Se não quiser perder sua conta, não passe suas informações!</small>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1" class="Lebalinho">Senha</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleInputPassword1", placeholder:"Enter email"%>
      </div>

      <div class="form-check">
        <% if devise_mapping.rememberable? %>
          <div class="form-check-input">
            <%= f.check_box :remember_me %>
            <label class="Lebalinho"for="exampleCheck1">Check me out</label>
          </div>
        <% end %>
      </div>

      <%= f.submit "Entrar", class:"btn btn-primary" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>